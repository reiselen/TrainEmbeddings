{
    "input_dir": "../data/",
    "output_dir": "../models/",
    "languages": ["ts", "ve"],
    "algorithms": ["w2v-s", "w2v-c", "glove", "fasttext-s", "fasttext-c", "flair-f", "flair-b", "elmo", "roberta"],
    "w2v-s": {
        "vector_size": 400,
        "window": 5,
        "min_count": 2,
        "workers": 4,
        "epochs": 50,
        "sg": 1,
        "hs": 1,
        "negative": 0,
        "ns_exponent": 0.8,
        "alpha": 1,
        "min_alpha":  0.00001,
        "seed": null,
        "max_vocab_size": null,
        "max_final_vocab": null,
        "sample": 0,
        "compute_loss": false
    },
    "w2v-c": {
        "vector_size": 400,
        "window": 5,
        "min_count": 10,
        "workers": 4,
        "epochs": 50,
        "sg": 0,
        "hs": 1,
        "negative": 0,
        "ns_exponent": 0.94,
